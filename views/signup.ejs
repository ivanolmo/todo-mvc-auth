<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/css/style.css" />
  <script src="https://kit.fontawesome.com/c3157a1ff1.js" crossorigin="anonymous"></script>
  <title>Signup</title>
</head>

<body>
  
  <div class="navButtons">
    <a class="dark-mode-btn" onclick="darkMode()"><i class="fa-solid fa-circle-half-stroke"></i></a>
    <a href="/"><i class="fa-solid fa-house"></i></a>
    </div>

    <body class="login">

  <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
  <div class="alert alert-danger"><%= el.msg %></div>
  <% }) %> <% } %>
  <form class="signupForm" action="/signup" method="POST">
    <input type="text" name="userName" placeholder="User Name" />
    <input type="email" name="email" placeholder="Email" />
    <input type="password" name="password" placeholder="Password" />
    <input type="password" name="confirmPassword" placeholder="Confirm Password" />
    <input type="submit" />
  </form>

  <script src="js/main.js"></script>
</body>

</html>