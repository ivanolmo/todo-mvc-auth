<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <div class="todo">
        <h1><%= user.userName %>s Todos</h1>
    </div>
    <div class="todoList">
        <ul>
        <% todos.forEach( el => { %>
            <li class='todoItem' data-id='<%=el._id%>'>
                <span class='<%= el.completed === true ? 'completed' : 'not'%>'><%= el.todo %></span>
                <span class='del'> Delete </span>
            </li>
        <% }) %>   
    
        </ul>
    </div>
    <div class="userNumber">
        <h2><%= user.userName %> has <%= left %> things left to do.</h2>
    </div>
    <div class="addTodo">
        <form action="/todos/createTodo" method='POST'>
        <input type="text" placeholder="Enter Todo Item" name='todoItem'>
        <input type="text" placeholder="Add subtask" name="subTasks">
        <!-- <button>More Subtasks</button> -->
        <input type="submit">
        </form>
    </div>
        <a id="logoutButton" class="button" href="/logout">Logout</a>
    
    <script src="js/main.js"></script>
</body>
</html>